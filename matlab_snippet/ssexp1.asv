w=1:200;
H1=[ones(1,100),zeros(1,100)];
H2=[zeros(1,50),ones(1,150)];
H=H1.*H2/(2*pi);
axis([0,200,0,1.5]);
subplot(3,1,1),plot(w,H1),axis([0,200,0,1.5]);
title('低通滤波器幅频响应'),xlabel('频率/Hz'),ylabel('|H1(j\omega)|')
subplot(3,1,2),plot(w,H2);axis([0,200,0,1.5]);
title('低通滤波器幅频响应'),xlabel('频率/Hz'),ylabel('|H2(j\omega)|')
subplot(3,1,3),plot(w,H);axis([0,200,0,0.5]);
title('低通滤波器幅频响应'),xlabel('频率/Hz'),ylabel('|H1(j\omega)・H2(j\omega)|/(2\pi)')